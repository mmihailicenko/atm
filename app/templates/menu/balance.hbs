<h1>Balance</h1>
<div class="row">
    {{#each this.model as |account|}}
        <div class="col-xs-12 col-sm-6 col-md-4">
            <div class="well">
                <div class="thumbnail">
                    <div class="caption">
                        <h3>Bank Account Number: {{account.bankAccountNumber}}</h3>
                        <h3>Balance: {{account.balance}}</h3>
                    </div>
                </div>
            </div>
        </div>
    {{/each}}
</div>